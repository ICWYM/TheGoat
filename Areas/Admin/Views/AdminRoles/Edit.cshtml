@model TechWeb.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}   
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Quản lý quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>
<div class="card">
    <h5 class="card-header">Sửa quyền</h5>
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <div class="form-group">
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">Quyền</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" asp-for="RoleName" placeholder="Tên quyền">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">Mô tả</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" asp-for="Description" placeholder="Mô tả">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

