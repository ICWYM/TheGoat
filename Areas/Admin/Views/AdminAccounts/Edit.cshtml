@model TechWeb.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Quản lý tài khoản quản trị</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin tài khoản </span>
        </nav>
    </div>
</div>
<div class="card">
    <h5 class="card-header">Sửa tài khoản</h5>
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.AccountId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" />
            <div class="form-group">
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">Họ tên</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="FullName" placeholder="Họ tên">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="col-sm-2 col-form-label">SĐT</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Phone" placeholder="SĐT ">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-sm-10">
                        <label asp-for="RoleId" class="control-label"></label>
                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.QuyenTruyCap"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-sm-10">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-sm-10">
                        <label asp-for="Active" class="checkbox"></label>
                        <input asp-for="Active" class="checkbox" />
                        <span asp-validation-for="Active" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>