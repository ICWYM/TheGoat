
@{
    ViewData["Title"] = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Đoạn giới thiệu trang liên hệ  -->
<div class="page-style-a">
    <div class="container">
        <div class="page-intro">
            <h2>Liên hệ</h2>
            <!--Thông tin bread-crumb -->
            <ul class="bread-crumb">
                <li class="has-separator">
                    <i class="ion ion-md-home"></i>
                    <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                <!--Phần Thông tin bread-crumb được đánh dấu -->
                <li class="is-marked">
                    <a asp-controller="Home" asp-action="Contact">Liên hệ</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Đoạn giới thiệu trang liên hệ  -->

<!-- Trang Liên hệ -->
<div class="page-contact u-s-p-t-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <!--Điền thông tin liên lạc-->
                <div class="touch-wrapper">
                    <h1 class="contact-h1">Gửi thông tin liên lạc cho chúng tôi:</h1>
                    <form>
                        <div class="group-inline u-s-m-b-30">
                            <!-- Họ tên -->
                            <div class="group-1 u-s-p-r-16">
                                <label for="contact-name">
                                    Họ và tên
                                    <span class="astk">*</span>
                                </label>
                                <input type="text" id="contact-name" class="text-field" placeholder="Họ và tên">
                            </div>
                            <!--Email -->
                            <div class="group-2">
                                <label for="contact-email">
                                    Địa chỉ Email
                                    <span class="astk">*</span>
                                </label>
                                <input type="text" id="contact-email" class="text-field" placeholder="Email">
                            </div>
                        </div>
                        <!--Tiêu đề -->
                        <div class="u-s-m-b-30">
                            <label for="contact-subject">
                                Tiêu đề
                                <span class="astk">*</span>
                            </label>
                            <input type="text" id="contact-subject" class="text-field" placeholder="Tiêu đề">
                        </div>
                        <!--Nội dung -->
                        <div class="u-s-m-b-30">
                            <label for="contact-message">Nội dung</label>
                            <textarea class="text-area" id="contact-message" placeholder="Nội dung liên hệ"></textarea>
                        </div>
                        <div class="u-s-m-b-30">
                            <button type="submit" class="button button-outline-secondary">Gửi thông tin liên hệ</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="information-about-wrapper">
                    <!-- Các thông tin liên lạc của shop -->
                    <h1 class="contact-h1">Về chúng tôi</h1>
                    <p>
                        Chào mừng bạn đến với The Goat Shop - nơi tự hào là địa chỉ hàng đầu cho những người đam mê công nghệ! Chúng tôi mang đến cho bạn một trải nghiệm mua sắm độc đáo với sự đa dạng và chất lượng hàng đầu trong lĩnh vực công nghệ.
                    </p>
                    <p>
                        Hãy đến với The Goat Shop và khám phá thế giới công nghệ đầy sáng tạo cùng chúng tôi ngay hôm nay!
                    </p>
                </div>
                <div class="contact-us-wrapper">
                    <h1 class="contact-h1">Liên hệ</h1>
                    <!-- Địa chỉ-->
                    <div class="contact-material u-s-m-b-16">
                        <h6>Địa chỉ</h6>
                        <span>279 Đ. Nguyễn Tri Phương, Phường 5, Quận 10, Thành phố Hồ Chí Minh</span>
                    </div>
                    <!--Email -->
                    <div class="contact-material u-s-m-b-16">
                        <h6>Email</h6>
                        <span>thegoatshop.ueh@gmail.com</span>
                    </div>
                    <!--Số điện thoại-->
                    <div class="contact-material u-s-m-b-16">
                        <h6>Hotline</h6>
                        <span>0911904045</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Nhúng map về vị trí của shop  -->
    <div class="info-right">

        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.652754929785!2d106.6684468!3d10.7612225!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ee4ecfa255d%3A0x9e5ec3fa6801b7d6!2zMjc5IMSQLiBOZ3V54buFbiBUcmkgUGjGsMahbmcsIFBoxrDhu51uZyA1LCBRdeG6rW4gMTAsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaA!5e0!3m2!1sen!2s!4v1711286382437!5m2!1sen!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        <a href="https://www.maps.ie/create-google-map/">
            Embed
            Google Map
        </a>
        <br />
    </div>
</div>
