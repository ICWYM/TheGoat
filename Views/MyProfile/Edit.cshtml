
@{
    ViewData["Title"] = "Chỉnh sửa thông tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/profile.css" rel="stylesheet" />
<style>
    .full-layer-outer-header {
        background-color: black;
    }

    .mega-menu {
        margin-left: 630px;
        width: 20%;
        padding-right: 20px;
        padding-left: 20px;
        text-align: center;
    }
</style>
<!-- Giới thiệu trang sửa thông tin - -->
<div class="page-style-a">
    <div class="container">
        <div class="page-intro">
            <h2>Sửa thông tin</h2>
            <!--Thông tin bread-crumb -->
            <ul class="bread-crumb">
                <li class="has-separator">
                    <i class="ion ion-md-home"></i>
                    <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                <li class="has-separator">
                    <a asp-controller="MyProfile" asp-action="Index">Thông tin tài khoản</a>
                </li>
                <!--Phần Thông tin bread-crumb được đánh dấu -->
                <li class="is-marked">
                    <a asp-controller="MyProfile" asp-action="Edit">Sửa thông tin</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Giới thiệu trang sửa thông tin - -->

<div class="u-s-p-b-60">

    <!--====== Phần nội dung chính ======-->
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                        <!--====== Dashboard ======-->
                        <!-- MENU ĐIỀU HƯỚNG CỦA TRANG TÀI KHOẢN -->
                        <div class="dash__box dash__box--bg-white dash__box--shadow u-s-m-b-30">
                            <div class="dash__pad-1">

                                <ul class="dash__f-list">
                                    <li>

                                        <a class="dash-active" asp-controller="MyProfile" asp-action="Manage">Quản lí tài khoản</a>
                                    </li>
                                    <li>

                                        <a asp-controller="MyProfile" asp-action="Index">Hồ sơ</a>
                                    </li>

                                    <li>

                                        <a asp-controller="MyProfile" asp-action="My_Order">Đơn hàng của tôi</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <!-- MENU ĐIỀU HƯỚNG CỦA TRANG TÀI KHOẢN -->
                        <!-- ĐƠN ĐẶT, ĐƠN HUỶ, WISHLIST -->
                        <div class="dash__box dash__box--bg-white dash__box--shadow dash__box--w">
                            <div class="dash__pad-1">
                                <ul class="dash__w-list">
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-1"> <i class="fa-solid fa-cart-shopping"></i></span><br>

                                            <span class="dash__w-text">40</span>

                                            <span class="dash__w-name">Đơn đặt</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-2"><i class="fa-solid fa-xmark"></i></span><br>

                                            <span class="dash__w-text"> 0</span>

                                            <span class="dash__w-name"> Đơn huỷ</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-3"><i class="fa-solid fa-heart"></i></span><br>

                                            <span class="dash__w-text">0</span>

                                            <span class="dash__w-name">Wishlist</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- ĐƠN ĐẶT, ĐƠN HUỶ, WISHLIST -->
                        <!--====== Dashboard ======-->

                    </div>

                    <!-- TIÊU ĐỀ "CHỈNH SỬA HỒ SƠ"  -->
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-14">Chỉnh sửa <span>Hồ sơ</span></h1>
                                <div class="dash__link dash__link--secondary u-s-m-b-30">

                                    <a href="#" id="member">Trở thành Thành viên The Goat ?</a>
                                </div>

                                <!-- THÔNG TIN CÁ NHÂN -->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form class="dash-edit-p">
                                            <div class="edit">
                                                <div class="gl-inline hoten">
                                                    <div class="u-s-m-b-30">

                                                        <label class="gl-label" for="reg-fname" style="font-weight: bold;color: black;">HỌ *</label><br>

                                                        <input class="input-text input-text--primary-style" type="text" id="reg-fname" placeholder="Trần">
                                                    </div>
                                                    <div class="u-s-m-b-30">

                                                        <label class="gl-label" for="reg-lname" style="font-weight: bold;color: black;">TÊN *</label><br>

                                                        <input class="input-text input-text--primary-style" type="text" id="reg-lname" placeholder="Hà">
                                                    </div>
                                                </div>
                                                <div class="gl-inline sinhnhat">
                                                    <div class="u-s-m-b-30 sinhnhat">
                                                        <!--====== Date of Birth Select-Box ======-->
                                                        <!-- HỘP CHỌN SINH NHẬT -->
                                                        <span class="gl-label" style="font-weight: bold;color: black;">SINH NHẬT</span><br>
                                                        <div class="gl-dob">
                                                            <select class="select-box select-box--primary-style">
                                                                <option selected>Ngày</option>
                                                                <option value="01">01</option>
                                                                <option value="02">02</option>
                                                                <option value="03">03</option>
                                                                <option value="04">04</option>
                                                            </select>
                                                            <select class="select-box select-box--primary-style">
                                                                <option selected>Tháng</option>
                                                                <option value="male">01</option>
                                                                <option value="male">02</option>
                                                                <option value="male">03</option>
                                                                <option value="male">04</option>
                                                            </select>
                                                            <select class="select-box select-box--primary-style">
                                                                <option selected>Năm</option>
                                                                <option value="1991">2001</option>
                                                                <option value="1992">2002</option>
                                                                <option value="1993">2003</option>
                                                                <option value="1994">2004</option>
                                                            </select>
                                                        </div>
                                                        <!--====== End - Date of Birth Select-Box ======-->
                                                        <!-- HỘP CHỌN GIỚI TÍNH -->
                                                    </div>
                                                    <div class="u-s-m-b-30">

                                                        <label class="gl-label" for="gender" style="font-weight: bold;color: black;">GIỚI TÍNH</label>
                                                        <br><select class="select-box select-box--primary-style u-w-100" id="gender">
                                                            <option selected>Lựa chọn</option>
                                                            <option value="male">Nam</option>
                                                            <option value="male">Nữ</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Thông tin email -->
                                            <div class="gl-inline1">
                                                <div class="u-s-m-b-30">
                                                    <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>

                                                    <span class="dash__text">abc@gmail.com</span>
                                                    <div class="dash__link dash__link--secondary">

                                                        <a href="#" id="thaydoi">Thay đổi</a>
                                                    </div>
                                                </div>
                                                <!-- Thông tin SDT -->
                                                <div class="u-s-m-b-30">
                                                    <h2 class="dash__h2 u-s-m-b-8">Số điện thoại</h2>

                                                    <span class="dash__text"> (+84) 905103596</span>
                                                    <div class="dash__link dash__link--secondary">

                                                        <a href="#" id="thaydoi">Thay đổi</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Nút lưu thay đổil -->
                                            <button class="btn btn--e-brand-b-2" type="submit" id="luu_button">LƯU</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== Phần nội dung chính ======-->
</div>

